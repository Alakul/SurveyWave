@model Question
<div id="question_@(Model.Index)" class="questionRow list-group-item">
    <div class="d-flex justify-content-between">   
        <div class="d-flex justify-content-between">
            <button type="button" class="questionHide btn btn-light mr-3"><i class="bi bi-chevron-down"></i></button>
            <label class="questionLabel col-form-label mr-3">@(Model.Index+1).</label>
            <input type="text" class="questions form-control" data-val="true" data-val-length="Pole Pytanie musi mieć co najmniej 2 i maksymalnie 100 znaków." data-val-length-max="100" data-val-length-min="2" data-val-required="Pole Pytanie jest wymagane." id="Text" maxlength="100" name="Questions[@(Model.Index)].Text" value="">
            <span class="questionSpan text-danger field-validation-valid" data-valmsg-for="Questions[@(Model.Index)].Text" data-valmsg-replace="true"></span>
        </div>
        <div class="questionButtons">
            <button type="button" class="questionUp btn btn-light"><i class="bi bi-arrow-up"></i></button>
            <button type="button" class="questionDown btn btn-light"><i class="bi bi-arrow-down"></i></button>
            <a href="#" class="btn btn-light deleteQuestion"><i class="bi bi-trash"></i></a>
        </div>
    </div>

    <div class="questionContent">
        <input name="Questions[@(Model.Index)].Type" class="inputGroupValue" value="Radio" hidden>
        <div class="answerRows">
            <partial name="Templates/_Answer" model="@new Answer() { QuestionIndex = @Model.Index }" />
        </div>

        <div class="d-flex justify-content-between">
            <div class="mt-2 col-4 text-center">
                <a class="addAnswer btn btn-light" asp-action="AddAnswer" asp-controller="Survey"><i class="bi bi-plus-lg"></i> Dodaj odpowiedź</a>
            </div>
            <div class="mt-2">
                <select class="selectType form-control">
                    <option selected value="1">Jednokrotny wybór</option>
                    <option value="2">Wielokrotny wybór</option>
                </select>
            </div>
        </div>
    </div>
</div>