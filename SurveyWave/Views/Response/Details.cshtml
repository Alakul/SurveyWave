@model ResponseViewModel

@{
	ViewData["Title"] = "Wyniki ankiety";
}
<div>
    <div class="d-flex justify-content-between">
        <div class="mb-3">
            <h3 name="surveyTitle" type="text">@Model.Survey.Title</h3>
            <p>@Model.Survey.Description</p>
        </div>
        <div class="text-right">
            <p>Data opublikowania: <strong>@Model.Survey.Date</strong></p>
            <p>Status: 
                @if (@Model.Survey.Status == "O"){
                    <strong >Otwarta</strong>
                }
                else if (@Model.Survey.Status == "C"){
                    <strong>Zamknięta</strong>
                }
            </p>
        </div>
    </div>
    <hr class="mb-0"/>
    <div class="mb-3 mt-3">
        <p class="m-0">Liczba odpowiedzi: <strong>@Model.ResponsesInfo.Count</strong></p>
    </div>

    <ul class="list-group list-group-flush">
        @for (int i = 0; i < Model.Questions.Count(); i++)
        {
            <li class="list-group-item">
                <h4>@(i+1). @Model.Questions[i].Text</h4>
                <div class="form-check">
                    @for (int j = 0; j < Model.Questions[i].Answers.Count(); j++)
                    {
                        <p>@j. @Model.Questions[i].Answers[j].Text</p>
                        <p>Liczba odpowiedzi na pytanie: @Model.Responses.Where(x=>x.Response.AnswerId==@Model.Questions[i].Answers[j].Id).ToList().Count()</p>
                    }
                </div>
            </li>
        }
    </ul>
</div>