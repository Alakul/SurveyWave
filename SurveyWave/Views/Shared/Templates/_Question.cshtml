@model Question
<div id="question_@(Model.Index)" class="questionRow list-group-item">
    <div class="d-flex justify-content-between">   
        <div class="d-flex justify-content-between align-items-center">
            <button type="button" class="questionHide btn btn-light btn-action mr-3"><i class="bi bi-chevron-down"></i></button>
            <label class="questionLabel col-form-label mr-3">@(Model.Index+1).</label>
            <div class="align-items-center">
                <input type="text" class="questions form-control form-control-sm" name="Questions[@(Model.Index)].Text">
            </div>
        </div>
        <div class="questionButtons">
            <button type="button" class="questionUp btn btn-light btn-action"><i class="bi bi-arrow-up"></i></button>
            <button type="button" class="questionDown btn btn-light btn-action"><i class="bi bi-arrow-down"></i></button>
            <a href="#" class="btn btn-light deleteQuestion btn-light btn-action"><i class="bi bi-trash"></i></a>
        </div>
    </div>

    <div class="questionContent">
        <input name="Questions[@(Model.Index)].Type" class="inputGroupValue" value="Radio" hidden>
        <div class="answerRows">
            <partial name="Templates/_Answer" model="@new Answer() { QuestionIndex = @Model.Index, Index = 0 }" />
            <partial name="Templates/_Answer" model="@new Answer() { QuestionIndex = @Model.Index, Index = 1 }" />
        </div>

        <div class="d-flex justify-content-between mt-2">
            <div class="text-center" style="margin-left: 25px;">
                <a class="addAnswer btn btn-sm btn-light" asp-action="AddAnswer" asp-controller="Survey"><i class="bi bi-plus-lg"></i> Dodaj odpowiedź</a>
            </div>
            <div>
                <select class="selectType form-control form-control-sm">
                    <option selected value="1">Jednokrotny wybór</option>
                    <option value="2">Wielokrotny wybór</option>
                </select>
            </div>
        </div>
    </div>
</div>